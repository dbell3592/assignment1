@{
    ViewData["Title"] = "Home Page";
}

<div class="text-center">

    <script type="text/javascript">

        function populateStory1() {
            document.getElementById('userstory1right').value = document.getElementById('userstory1left').value;
        }
        function populateStory2() {
            document.getElementById('userstory2right').value = document.getElementById('userstory2left').value;
        }
        function populateStory3() {
            document.getElementById('userstory3right').value = document.getElementById('userstory3left').value;
        }
        function populateStory4() {
            document.getElementById('userstory4right').value = document.getElementById('userstory4left').value;
        }
        function populateStory5() {
            document.getElementById('userstory5right').value = document.getElementById('userstory5left').value;
        }

    </script>



    <h1 class="display-4"><u>Welcome</u></h1>

    <br>


    <b>enter the text you want on a green background</b><br>
    <label>enter text here:</label>
    <input type="text" id="userstory1left" onkeyup="populateStory1();" />

    <label>text displayed:</label>
    <input type="text" id="userstory1right" />
    <button name="greentext" type="button" onclick="greenrender()">change to green</button><br>
    <br>
    <br>
    <script>
        function greenrender() {
            document.getElementById("userstory1right").style.backgroundColor = "green";
        }
    </script>



    <b>enter a number to see if its binary:</b><br>
    <label>enter text here:</label>
    <input type="text" id="userstory2left" onkeyup="populateStory2();" />

    <label>text displayed:</label>
    <input type="text" id="userstory2right" />
    <button type="button" onclick="binaryCheck()">is it binary?</button><br>
    <p id="demo"></p>
    <script>
        function binaryCheck() {

          
            var x, text;

            x = document.getElementById("userstory2right").value;


            if (isNaN(x) || x < 2 ) {
                text = "binary number";
            } else {
                text = "nonbinary number";
            }
            document.getElementById("demo").innerHTML = text;
        }
            
    </script>
    <br>
    <br>


    <b>enter the text you want to see bolded</b><br>
    <label>enter text here:</label>
    <input type="text" id="userstory3left" onkeyup="populateStory3();" />

    <label>text displayed:</label>
    <input type="text" id="userstory3right" />
    <button name="boldtext" type="button" onclick="boldify()"> change to bold</button><br>
    <br>
    <br>
    <script>
        function boldify() {
            document.getElementById("userstory3right").style.fontWeight = "900";
        }
    </script>


    <b>enter the text you want to see italisized</b><br>
    <label>enter text here:</label>
    <input type="text" id="userstory4left" onkeyup="populateStory4();" />

    <label>text displayed:</label>
    <input type="text" id="userstory4right" />
    <button name="italisize" type="button" onclick="italisize()">change to italics </button><br>
    <br>
    <br>
    <script>
        function italisize() {
            document.getElementById("userstory4right").style.fontStyle = 'italic';
        }
    </script>


    <b>enter the text you want reversed</b><br>
    <label>enter text here:</label>
    <input type="text" id="userstory5left" onkeyup="populateStory5();" />

    <label>text displayed:</label>
    <input type="text" id="userstory5right" />
    <button type="button" onclick="doReverse()">reversetext</button><br>
    <br>
    <br>

    <script>
        function doReverse() {
            var str = document.getElementById('userstory5right').value;
            alert("" + reverseString(str));
        }
        function reverseString(str) {
            str = str.split('');
            str = str.reverse();
            str = str.join('');
            return str;
        }

    </script>


    <button type="button" id="darkmode" onclick="darkmode('gray'); darkmode2('white');">darkmode</button>
    <button type="button" value="Refresh Page" onClick="window.location.reload()">lightmode</button>

    <script>
        function darkmode(color) {
            document.body.style.background = color;
        }

    </script>
    <script>
        function darkmode2(color) {
            document.body.style.color = color;
        }

    </script>

</div>
